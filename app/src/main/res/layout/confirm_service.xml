<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/confirm_service_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monedes a pagar:"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/confirm_service_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/confirm_service_text"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/layout"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_service_coins">


        <TextView
            android:id="@+id/confirm_service_valoration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ValoraciÃ³:"
            android:textSize="20dp"
            android:textStyle="bold"

            android:layout_marginTop="30dp"
            />

        <EditText
            android:id="@+id/confirm_service_valoration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            />

    </LinearLayout>






    <Button
        android:id="@+id/confirm_service_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout"
        android:text="Pagar"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        />

</RelativeLayout>